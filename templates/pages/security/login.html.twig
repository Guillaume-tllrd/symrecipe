{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Connexion
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="mt-4">Connexion</h1>
		{% if error %}
			<div class="alert alert-danger mt-4">
				<div>{{error.messageKey|trans(error.messageData, 'security')}}</div>
			</div>

		{% endif %}

		<form action="{{path('app_login')}}" method="post">
			<div class="form-group">
				<label for="username" class="form-label mt-4">Adresse email
				</label>
				<input type="email" class="form-control" id="username" name="_username" value="{{last_username}}" aria-describedby="emailHelp" placeholder="example@symrecipe.fr">
				<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Password</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="********" autocomplete="off">
			</div>
			<button type="submit" class="btn btn-primary mt-4">
				Se connecter</button>
		</form>
	</div>
{% endblock %}
